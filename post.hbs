{{!< default}}

{{#post}}


<main class="content" role="main">
    <article class="{{post_class}}">

              <h1 class="post__title">{{title}}</h1>
             <section class="post__meta">
                <p>Posted by {{#primary_author}}<a href="{{url}}">{{name}}</a>{{/primary_author}} on <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time> {{tags prefix=" under "}} 
            </section>
            <section class="post-content">

                {{#if excerpt}}<blockquote>{{excerpt}}</blockquote>{{/if}}
                {{#if feature_image}}<img src="{{feature_image}}" alt="{{feature_image_alt}}"/>{{/if}}
                {{#if feature_image_caption}}<div class="feature_image_caption">{{feature_image_caption}}</div>{{/if}}
                
                {{content}}
            </section>
        <section class="socials">
          <hr>
             <h4>Share this post</h4>

             <ul>
                <li><a class="symbol" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">circletwitterbird</a></li>
                <li><a class="symbol" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">circlefacebook</a></li>
                             </ul>
     
        </section>
    </article>
</main>


{{/post}}
