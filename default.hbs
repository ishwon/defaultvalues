<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />

    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="fb:app_id" content="612105415646159"/>
	
	{{#is "index"}}
	<title>{{@blog.title}}</title>
	<meta name="description" content="{{@blog.description}}"/>
	<meta property="og:title" content="{{@blog.title}}"/>
	<meta itemprop="name" content="{{@blog.title}}"/>
	{{#if @site.cover_image}}
	<meta property="og:image" content="{{@blog.url}}{{@site.cover_image}}"/>
	<link rel="image_src" href="{{@blog.url}}{{@site.cover_image}}"/>
	<meta itemprop="image" content="{{@blog.url}}{{@site.cover_image}}"/>
	{{/if}}
	{{/is}}
{{#is "post, page"}} {{!--  Meta for post and page contexts --}}
<title>{{meta_title}} — {{@blog.title}}</title>
<meta itemprop="name" content="{{meta_title}} — {{@blog.title}}"/>
{{#if post.meta_description }}
<meta name="description" content="{{meta_description}}"/>
<meta itemprop="description" content="{{meta_description}}"/>
{{else}}
{{#post}}
<meta name="description" content="{{excerpt words="27"}}…"/>
<meta itemprop="description" content="{{excerpt words="27"}}…"/>
{{/post}}
{{/if}}
{{#post}}
{{#if feature_image}}
<meta property="og:image" content="{{@blog.url}}{{img_url}}"/>
<link rel="image_src" href="{{@blog.url}}{{img_url}}"/>
<meta itemprop="image" content="{{@blog.url}}{{img_url}}"/>
{{else}}
{{#if @site.cover_image}}
<meta property="og:image" content="{{@blog.url}}{{@site.cover_image}}"/>
<link rel="image_src" href="{{@blog.url}}{{@site.cover_image}}"/>
<meta itemprop="image" content="{{@blog.url}}{{@site.cover_image}}"/>
{{/if}}
{{/if}}
{{/post}}
{{/is}} {{!--  End of post and page contexts --}}

